((synopsis "A small gamedev-oriented math library")
 (author "Alex Charlton")
 (maintainer "Adrien (Kooda) Ramos")
 (category math)
 (license "BSD")
 (dependencies srfi-1 matchable)
 (components
   (c-object hypermath
     (source "hypermath/src/hypermath.c")
     (csc-options -C "-Ihypermath/include -O3"))
   (extension gl-math
     (objects hypermath)
     (csc-options -d0 -O3 -C "-Ihypermath/include -O3"))))
